section.section
  a.anchor#projects
  .container
    .content.is-medium
      h2 = t('.projects.title')
      p == t('.projects.subtitle')

    #projects-carousel style=("overflow: hidden; margin: 0 -0.75rem;") 
      - @projects.each do |project|
        .carousel-item.content.has-text-centered style=("margin: 0.75rem;") 
          .card
            .card-content
              .media
                .media-left
                  figure.image.is-96x96
                    - if project.image.present?
                      = image_tag project.image.medium.url, loading: :lazy
                .media-content
                  p.title.is-4 = project.title
                  p.subtitle.is-6 = project.subtitle

                  p.is-size-7 
                    span.start = l project.start_date
                    |  - 
                    span.end
                      - if project.end_date.present?
                        = l project.end_date
                      - else
                        |Present date

              .content
                .section
                  h4.is-4 About the company:
                  p == markdown project.description_about_the_company
                .section
                  h4.is-4 My role:
                  p == markdown project.description_my_role
                .section
                  h4.is-4 Techniques used:
                  .tags.is-centered
                    - project.tags.each do |tag|
                      span.tag= tag
                    
